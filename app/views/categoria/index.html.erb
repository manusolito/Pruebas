<h1>Listar Categoria</h1>

<head>
<style>
table,td {
    padding: 5px;
}
</style>
</head>
<table style="width:100%">

  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categoria.each do |categoria| %>
      <tr>
        <td><%= categoria.nombre %></td>
        <td><%= link_to 'Mostrar', categoria %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Categoria', :action => :new %>
